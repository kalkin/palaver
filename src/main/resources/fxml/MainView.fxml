<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.fontawesome.AwesomeIcon?>
<?import de.xsrc.palaver.controls.OpenPalaverList?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="1024.0" prefWidth="1280.0" styleClass="background"
            xmlns="http://javafx.com/javafx/8">
    <children>
        <StackPane styleClass="bar,zdepth1" maxHeight="144.0" minHeight="64.0" prefHeight="144.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >

            <BorderPane maxWidth="1024" prefWidth="1024">
                <left>
                    <BorderPane maxHeight="64">
                        <left>

                            <Button fx:id="showOpenPalaverButton" onAction="#showAction" styleClass="awesome-icon"
                                    visible="false" managed="false">
                                <text>
                                    <AwesomeIcon fx:constant="CHEVRON_DOWN"/>
                                </text>
                                <tooltip>
                                    <Tooltip text="%hide_palaver_list"/>
                                </tooltip>
                            </Button>
                        </left>
                        <center>
                            <Text styleClass="title" text="Palavers">

                            </Text>
                        </center>
                    </BorderPane>
                </left>
                <right>
                    <Button fx:id="showAccountsButton" styleClass="action-overflow" maxWidth="64" maxHeight="64"/>
                </right>
            </BorderPane>
        </StackPane>
        <StackPane AnchorPane.bottomAnchor="24.0" AnchorPane.topAnchor="64" AnchorPane.rightAnchor="0"
                   AnchorPane.leftAnchor="0">
            <BorderPane maxWidth="1024" minWidth="256">
                <left>
                    <OpenPalaverList fx:id="palaverListControl"/>
                </left>
                <center>
                    <BorderPane styleClass="mainPaper" fx:id="historyPane" maxWidth="960" prefWidth="704.0"
                                style="-fx-padding:0;"/>
                </center>

                <right>
                    <StackPane maxWidth="64" minWidth="64"/>
                </right>

            </BorderPane>
        </StackPane>
    </children>
</AnchorPane>
