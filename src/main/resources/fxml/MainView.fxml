<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.fontawesome.AwesomeIcon?>
<?import de.xsrc.palaver.controls.OpenPalaverList?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="640"
            prefHeight="480" fx:id="borderPane">

    <left>
        <OpenPalaverList fx:id="palaverListControl"/>
    </left>
    <center>
        <BorderPane>
            <top>

                <BorderPane styleClass="bar">
                    <left>
                        <Button fx:id="showOpenPalaverButton" styleClass="awesome-icon" onAction="#showAction">
                            <text>
                                <AwesomeIcon fx:constant="CHEVRON_RIGHT"/>
                            </text>
                            <tooltip>
                                <Tooltip text="%show_palaver"/>
                            </tooltip>
                        </Button>
                    </left>
                    <right>
                        <Button fx:id="showAccountsButton" styleClass="awesome-icon">
                            <text>
                                <AwesomeIcon fx:constant="GEAR"/>
                            </text>
                            <tooltip>
                                <Tooltip text="%account_managment"/>
                            </tooltip>
                        </Button>
                    </right>
                </BorderPane>
            </top>
            <center>
                <StackPane fx:id="historyPane">
                <Text>Help</Text>
                </StackPane>
            </center>
        </BorderPane>

    </center>
</BorderPane>

